{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": [
      ""
    ],
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".storybook/**/*"
  ]
}
